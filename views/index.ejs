<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Spotify Exercise</title>
    <link rel="stylesheet" href="/style.css" />
    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;300;500;600&display=swap"
      rel="stylesheet"
    />
    <!-- Remix Icon -->
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@3.4.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <script src="/script.js"></script>
  </head>
  <body>
    <main id="app">
      <!-- Left content section -->

      <section aria-label="most-played" class="left-content">
        <div class="main-navigation spotify-card">
          <div class="navigation-item disable active">
            <i class="ri-home-5-fill"></i>
            <p>Home</p>
          </div>
          <div class="navigation-item disable">
            <i class="ri-search-line"></i>
            <p>Search</p>
          </div>
        </div>
        <div class="most-played spotify-card">
          <div class="most-played-header">
            <div class="card-title">
              <i class="ri-building-2-fill"></i>
              <p>Most Played</p>
            </div>
            <div class="action disable">
              <i class="ri-add-line"></i>
              <i class="ri-arrow-right-line"></i>
            </div>
          </div>
          <div class="most-played-category">
            <div class="next-category disable">
              <i class="ri-arrow-right-s-line"></i>
            </div>
            <div class="category-wrapper disable">
              <p>Playlists</p>
              <p>Artists</p>
              <p>Albums</p>
              <p>Podcasts & Shows</p>
            </div>
          </div>
          <div class="most-played-songs scroll-able">
            <% playlists.forEach(playlist => { %>
            <a href="<%= playlist.url %>" target="_blank" class="song-item">
              <i
                class="ri-delete-bin-5-fill delete-btn"
                onClick="deleteSong(event,'<%= playlist.id %>')"
              ></i>
              <div class="thumbnail">
                <img src="<%= playlist.thumbnail %>" />
              </div>
              <div class="info">
                <p class="song-name line-clamp-1"><%= playlist.song %></p>
                <p class="artist line-clamp-1"><%= playlist.artist %></p>
              </div>
            </a>
            <% }) %>
          </div>
        </div>
      </section>

      <!-- Lyrics screen -->
      <section aria-label="lyrics-screen">
        <div class="spotify-card lyrics-wrapper">
          <div class="screen">
            <p>Express JS Exercise</p>
            <span>By Yardan - GIGIH 3.0</span>
          </div>
        </div>
      </section>
      <!-- recommendation-song -->
      <section aria-label="suggest-song">
        <div class="suggest-content scroll-able spotify-card">
          <div class="header">
            <h1>suggest for you</h1>
            <i class="ri-close-line disable"></i>
          </div>
          <% suggests.forEach(song => { %>
          <div class="suggest-item">
            <div class="thumbnail">
              <img src="<%= song.thumbnail %>" />
            </div>
            <div class="body">
              <div class="info">
                <h2 class="line-clamp-1"><%= song.song %></h2>
                <p class="line-clamp-1"><%= song.artist %></p>
              </div>
              <div class="action">
                <i
                  class="ri-add-line add-btn"
                  onclick="addSong('<%= JSON.stringify(song) %>')"
                ></i>
                <i class="ri-more-fill disable"></i>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </section>
    </main>
  </body>
</html>
